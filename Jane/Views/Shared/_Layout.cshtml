@using Jane.Infrastructure
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        
        @*FeedController*@
        <link id="RSS" title="@SiteConfiguration.SiteName.Value" type="application/rss+xml" rel="alternate" href="@Url.Action("Rss", "Feed")" /> 
        <link id="ATOM" title="@SiteConfiguration.SiteName.Value" type="application/atom+xml" rel="alternate" href="@Url.Action("Atom", "Feed")" />
        @RenderSection("head", required: false)
    </head>
    <body>
        @RenderBody()

        @RenderSection("aside", required: false)
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", false)
    </body>
</html>