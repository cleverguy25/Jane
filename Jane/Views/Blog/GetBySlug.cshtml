@model Jane.Models.Post

@if (TempData.ContainsKey("Message"))
{
    <div class="label info">@TempData["Message"]</div>
}
<div>
    @Html.Partial("Post", Model)
</div>
@Html.Partial("CommentLoader", Model.Guid)

@section aside
{
@Html.Action("Future", "Blog")
@Html.Action("TagCloud", "Tag")
@Html.Action("Related", "Blog", new { slug = Model.Slug })
@Html.Action("Recent", "Blog")
}
