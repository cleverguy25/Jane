@using Jane.Identity.ViewModels
@model LoginViewModel

<h2>Log in.</h2>
<div class="row">
    <div class="column medium-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, string.Empty)
                <div>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email, string.Empty)
                </div>
                <div>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password, string.Empty)
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.RememberMe, new { style = "display: inline-block" })
                    @Html.LabelFor(m => m.RememberMe, new { style = "display: inline-block" })
                </div>
                <div>
                    <input type="submit" value="Log in" class="button" />
                </div>
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
            }
        </section>
    </div>
    <div class="columns medium-4">
        <section id="socialLoginForm">
            @Html.Action("ExternalLogins", "Account")
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}